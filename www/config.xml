<?xml version="1.0" encoding="UTF-8"?>

<!-- config.xml reference: https://build.phonegap.com/docs/config-xml -->
<widget xmlns         = "http://www.w3.org/ns/widgets"
        xmlns:gap     = "http://phonegap.com/ns/1.0"
        id            = "com.antovar.txtest"
        versionCode   = "1"
        version       = "1.0">

    <name>TxTest</name>

    <description>
        Preguntas y respuestas
        Questions and answers

        Formato de texto simple (con html embebido)
        Simple text format (with inline html code)

        Se pueden eliminar preguntas
        Questions can be removed

        Se pueden generar sublistas de preguntas
        Question sublists can be created
    </description>

    <author href="http://antovar.260mb.com/TxTest" email="antovar@gmail.com">
        Antonio Tovar
    </author>

    <gap:platform name="android" />

    <feature name="http://api.phonegap.com/1.0/device" />

    <feature name="http://api.phonegap.com/1.0/file"/>

    <preference name="phonegap-version"        value="2.9.0" />
    <preference name="android-installLocation" value="auto" />
    <preference name="orientation"             value="default" />
    <preference name="KeepRunning"             value="false" />
    <preference name="LoadingDialog"           value="TxTest,Antonio Tovar"/>


    <icon src="assets/ldpi.png" gap:platform="android" gap:density="ldpi" />
    <icon src="assets/mdpi.png" gap:platform="android" gap:density="mdpi" />
    <icon src="assets/hdpi.png" gap:platform="android" gap:density="hdpi" />
    <icon src="assets/xhdpi.png" gap:platform="android" gap:density="xhdpi" />
    <icon src="assets/xxhdpi.png" gap:platform="android" gap:density="xxhdpi" />

</widget>
